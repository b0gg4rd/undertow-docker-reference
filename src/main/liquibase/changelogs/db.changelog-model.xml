<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

  <changeSet id="create-table-persons" author="b0gg4rd" context="model">
    <createTable tableName="persons">
      <column name="id" type="varchar(40)">
        <constraints nullable="false" />
      </column>
      <column name="curp" type="varchar(40)">
        <constraints nullable="false" />
      </column>
      <column name="names" type="varchar(250)">
        <constraints nullable="true" />
      </column>
      <column name="first_surname" type="varchar(100)">
        <constraints nullable="true" />
      </column>
      <column name="second_surname" type="varchar(100)">
        <constraints nullable="true" />
      </column>
      <column name="gender" type="varchar(50)">
        <constraints nullable="true" />
      </column>
      <column name="birthday" type="date">
        <constraints nullable="true" />
      </column>
    </createTable>
  </changeSet>

  <changeSet id="create-table-catalogs" author="b0gg4rd" context="model">
    <createTable tableName="catalogs">
      <column name="root" type="varchar(50)">
        <constraints nullable="true" />
      </column>
      <column name="code" type="varchar(50)">
        <constraints nullable="false" />
      </column>
      <column name="description" type="varchar(150)">
        <constraints nullable="false" />
      </column>
    </createTable>
  </changeSet>

</databaseChangeLog>
